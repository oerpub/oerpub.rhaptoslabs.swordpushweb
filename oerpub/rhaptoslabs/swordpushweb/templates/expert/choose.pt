<metal:use use-macro="base">

<tal:body metal:fill-slot="header">
  <div id="header-wrap">
    <div id="header-container">
      <div id="header">
	<img class="cnxlogo" src="${request.static_url('oerpub.rhaptoslabs.swordpushweb:static/images/connexions_icon.png')}"/>
	<h1>Connexions Importer</h1>
	<p class="status">You are logged in as ${request.session['username']}
	  <br/><a href="${request.route_url('logout')}">Click here to sign out</a></p>
	<a href="http://www.shuttleworthfoundation.org/" target="_blank"><img class="sflogo" src="${request.static_url('oerpub.rhaptoslabs.swordpushweb:static/images/sf.png')}"/></a>
      </div>
    </div>
  </div>
</tal:body>

<tal:body metal:fill-slot="content">
  <div id="ie6-container-wrap">
    <div id="container">
      <div id="content">
	<h1>Upload your document</h1>
        ${form.begin(request.route_url('choose'), multipart='multipart', id='uploadform')}
        ${form.csrf_token()}
	<p>You can upload any type of office document or a previously
	  saved zip package here. A preview will appear in this area so
	  that you can review it before publishing the final
	  version.</p>
	<center>
	  <br/>
          <label for="upload">File:</label>
          <input id="upload" name="upload" type="file" onchange="document.getElementById('file-submit').disabled=false;"/>
          <br/>
          <br/>
          ${form.submit('form.submitted', 'Preview', class_='submit', id='file-submit', disabled='disabled')}
          <br/>
          <br/>
	</center>
	<p>Alternatively, you can select a Google Document by clicking on the image below.</p>
	<center>
          <br/>
	  ${form.hidden('gdocs_resource_id', value=None, id='gdocs_resource_id')}
          ${form.hidden('gdocs_access_token', value=None, id='gdocs_access_token')}
          <a href="javascript:newPicker()" style="font-weight: bold"><img src="https://docs.google.com/images/doclist/logo_docs.gif"/></a>
          <br/>          
          <br/>
          <br/>
	  <div class="pleasewait" id="upload-wait" style="display:none;">
	    Your document is being processed. This may take a few
	    moments.
	  </div>
        </center>
        ${form.end()}
      </div>
    </div>
  </div>
</tal:body>

</metal:use>
